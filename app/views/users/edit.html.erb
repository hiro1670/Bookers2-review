<div class="container">
  <%= render 'layouts/errors', obj: @user %>
  <div class="row">
    <div class="col-md-8 offset-md-3">
      <h2 class="mt-3">User info</h2>
      
      <%= form_with model: @user do |f| %>
      
        <%= f.label :name %></br>
        <%= f.text_field :name, :size=>"46" %></br>
        
        <%= f.label :image, class: 'mt-3' %></br>
        <%= f.file_field :profile_image, accept: "image/*" %></br>
        
        <%= f.label :introduction, class: 'mt-3' %></br>
        <%= f.text_area :introduction, :size=>"46" %></br>
        
        <%= f.submit "Update User", class: 'btn btn-secondary mt-3'%>
      <% end %>
    </div>
  </div>
</div>