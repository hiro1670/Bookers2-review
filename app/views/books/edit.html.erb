<div class="container">
  <%= render 'layouts/errors', obj: @book %>
  <div class="row">
    <div class="col-md-8 offset-md-4">
      <h1 class="mt-4">Editing Book</h1>
      
      <%= form_with model: @book do |f| %>
        
        <h6 class="mt-3 mb-3">Title</h6>
        <%= f.text_field :title, :size=>"46" %>
        
        <h6 class="mt-3">Option</h6>
        <%= f.text_area :body, :size=>"46" %></br>
        
        <%= f.submit "Update Book", class: 'btn btn-success' %>
      <% end %>
      
      <%= link_to "Show", book_path(@book) %>
      
      |<%= link_to " Back", books_path %>
    </div>
  </div>
</div>