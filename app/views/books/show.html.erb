<div class="container">
  <%= flash[:notice] %>
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/info', user: @user %>
      
      <%= render 'list', book: @books %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      
      <h2 class="mt-3">Book detail</h2>
      
      <table class="table">
        <tr>
          <td>
            <%= link_to user_path(@book.user) do %>
              <%= image_tag @book.user.get_profile_image(100,100) %></br>
              <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>
          <% if @book.user == current_user %>
            <td><%= link_to "Edit", edit_book_path(@book), class: 'btn btn-success btn-sm' %></td>
            <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？", class: 'btn btn-danger btn-sm' %></td>
          <% end %>
        </tr>
      </table>      
    </div>
  </div>
</div>
